function tst()
{
  echo "PID: \t Tracer  Status"
  for j in $*; do
    for i in `ls /proc/$j/task`; do
      tracer_pid=`grep TracerPid /proc/$i/status | cut -f2`
      state=`grep State /proc/$i/status | cut -f2`
      echo "$i:\t $tracer_pid \t $state"
    done
  done;
}

