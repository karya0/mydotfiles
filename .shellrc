function lfd()
{
  if [[ "$*" = [[:digit:]]* ]] ; then
    pid=$*
  else
    pid=`pgrep -n $*`
  fi
  ls -l /proc/$pid/fd
}

function cmaps()
{
  if [[ "$*" = [[:digit:]]* ]] ; then
    pid=$*
  else
    pid=`pgrep -n $*`
  fi
  cat /proc/$pid/maps
}

function cstatus()
{
  if [[ "$*" = [[:digit:]]* ]] ; then
    pid=$*
  else
    pid=`pgrep -n $*`
  fi
  cat /proc/$pid/status
}

function tst()
{
  echo "PID: \t Tracer  Status"
  for j in $*; do
    for i in `ls /proc/$j/task`; do
      tracer_pid=`grep TracerPid /proc/$i/status | cut -f2`
      state=`grep State /proc/$i/status | cut -f2`
      echo "$i:\t $tracer_pid \t $state"
    done
  done;
}

